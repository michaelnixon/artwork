<% provide(:title, 'Listing Artworks') %>
<h1>Listing artworks</h1>
<%= form_tag("/artworks/export", method: "get") do %>
<table class="table table-striped table-bordered" id="mytracks" data-source="<%= artworks_ajax_path(format: :json) %>">
  <thead>
    <tr>
      <th>Name</th>
			<th>Description</th>
      <th>Start Date</th>
      <th>Completion Date</th>
      <th>Dimensions</th>
      <th>Gallery Info</th>
			<th>Artist</th>
			<% Artwork.tag_context_list.each do |context| %>		
				<th class=""><%= context.capitalize %></th>
			<% end %>
    </tr>
  </thead>
  <tbody>
			<%= render partial: "artwork", collection: @artworks %>
  </tbody>
</table>
<button type="submit" class="btn btn-default">Export</button>
<% end %>		
<br>

<%= link_to add_link_html("Create new artwork"), new_artwork_path if current_user %>