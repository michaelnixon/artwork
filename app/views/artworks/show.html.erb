<% provide(:title, "Artwork: #{@artwork.name}") %>
<h1><%= @artwork.name %><% if current_user %> <small><%= link_to edit_link_html('Edit'), edit_artwork_path(@artwork) %></small><% end %></h1>
<div class="row">
	  <div class="col-md-6">
			<%= image_tag(@artwork.asset.url(:medium)) if @artwork.asset? %>
			<p>Managed by <%= mail_to(@artwork.owner.email, @artwork.owner.display_name) %></p>
		</div>
		<div class="col-md-3">	
			<p>
				<h3>Description</h3>
				<%= @artwork.description %>
			</p>
			<p>
			  <strong>Start date: </strong>
			  <%= @artwork.start_date %>
			</p>
			<p>
			  <strong>Completion date: </strong>
			  <%= @artwork.completion_date %>
			</p>
			<p>
			  <strong>Dimensions: </strong>
			  <%= @artwork.dimensions %>
			</p>
			<p>
			  <strong>Gallery Info: </strong>
			  <%= @artwork.gallery_info %>
			</p>
			<% @artwork.tag_context_list.each do |context| %>		
				<p>	
				<strong><%= context.capitalize %>:</strong> <%= @artwork.tag_list_content_on(context) %>
				</p>
			<% end %>
		</div>
		<div class="col-md-3">	
			<h3>Artist:</h3>
			<%= link_to truncate(@artwork.artist.name, length: 40), artist_path(@artwork.artist) %>
		</div>		
</div>
<br/>
<%= link_to back_link_html('Return to list of artworks'), artworks_path %>
